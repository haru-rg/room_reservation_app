<div class="account-new">
    <div class="account-new-area">
        <h1>アカウント編集</h1>
        <div class="account-new-area-input">
            <% resource_name.to_s.humanize %>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "devise/shared/error_messages", resource: resource %>
                    <!--アカウント編集時に名前を入力できるようにフォームを追加-->
                    <%= f.label :name %><br />
                    <%= f.text_field :name, autofocus: true,class:"input_form", :placeholder =>"メールアドレスを入力してください"  %><br />
                    <%= f.label :email %><br />
                    <%= f.email_field :email, autofocus: true, autocomplete: "email",class:"input_form"  %>
                    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                        <div>Currently waiting confirmation for:
                            <%= resource.unconfirmed_email %>
                        </div>
                    <% end %>
                    <%= f.label :password %> <i>(変更する場合のみ入力)</i><br />
                    <%= f.password_field :password, autocomplete: "new-password",class:"input_form", :placeholder =>"変更後のパスワードを入力"  %><br />
                    <% if @minimum_password_length %><br />

                    <% end %>
                    <%= f.label :password_confirmation %> <i>(変更する場合のみ入力)</i><br />
                    <%= f.password_field :password_confirmation, autocomplete: "new-password",class:"input_form", :placeholder =>"確認用パスワードを入力"  %><br/>
                    <%= f.label :introduction %><br />
                    <%= f.text_area :introduction, autofocus: true,class:"input_form"  %><br/>
                    <%= f.label :image %><br/>
                    <%= f.file_field :image %><br/>
                    <%= f.label :current_password %><br />
                    <%= f.password_field :current_password, autocomplete: "current-password",class:"input_form", :placeholder =>"現在のパスワードを入力"  %>
                    <div class="actions">
                        <%= f.submit "Update" %>
                    </div>
            <% end %>
            <%= link_to '戻る', user_path(resource.id) %>
        </div>
    </div>
</div>