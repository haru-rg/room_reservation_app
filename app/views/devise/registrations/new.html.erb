<div class="account-new">
    <div class="account-new-area">
        <h1>新しいアカウントを作成</h1>
        <div class="account-new-area-input">
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <table>
                <tr>
                    <td><div class="hissu"><%= f.text_field :name, autofocus: true, :placeholder =>"ユーザー名",class:"input_form" %></div></td>
                </tr>
                <tr>
                <td><div class="hissu"><%= f.email_field :email, autofocus: true, :placeholder =>"メールアドレス", autocomplete: "email",class:"input_form" %></div></td>
                </tr>
                <tr>
                    <% if @minimum_password_length %>
                    <% end %><br />
                    <td><div class="hissu"><%= f.password_field :password, autocomplete: "new-password", :placeholder =>"パスワード",class:"input_form" %></div></td>
                </tr>
                <tr>
                <td><div class="hissu"><%= f.password_field :password_confirmation, autocomplete: "new-password", :placeholder =>"パスワード確認",class:"input_form" %></div></td>
                </tr>
            </table>
                <div class="actions">
                    <%= f.submit "新しいアカウントを作成", class: "blue-button-new" %>
                </div>
            <% end %>
            <%= link_to 'すでにアカウントをお持ちの方はログイン', new_user_session_path, class:"blue_text" %>
            <% render "devise/shared/links" %>
        </div>
    </div>
</div>