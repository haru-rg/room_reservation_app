<div class="room_index">
  <h4 class="search_count"><%= current_user.name %>さんの登録済みルーム一覧</h4>
  <p>件数： <%= @quantity %> 件</p>
  <table>
    <thead>
      <tr>
        <th>ルーム画像</th>
        <th>ルーム名</th>
        <th>ルーム紹介</th>
        <th>料金</th>
        <th>作成日</th>
        <th>編集</th>
        <th>削除</th>
      </tr>
    </thead>

    <tbody>
      <% @rooms.each do |room| %>
        <tr>
          <td><%= link_to image_tag(room.room_image.to_s, class: 'room-img-post'), room %></td>
          <td><%= link_to room.room_name, room, class: 'room-blue' %></td>
          <td><%= room.room_introduction %></td>
          <td><%= room.room_price %></td>
          <td><%= room.created_at.to_s(:datetime_jp) %></td>
          <td><%= link_to '編集', [:edit, room] %></td>
          <td><%= link_to '削除', room, method: :delete, data: { confirm: '本当に削除しますか？' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
