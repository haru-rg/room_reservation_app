<h1>Rooms#post 登録済みルーム一覧</h1>
<p><%= current_user.name %>さんが投稿したもののみ</p>
<p>検索結果： <%= @quantity %> 件</p>

<table>
  <thead>
    <tr>
      <th>ルームid</th>
      <th>ルーム画像</th>
      <th>ルーム名</th>
      <th>住所</th>
      <th>料金</th>
      <th>作成日</th>
      <th>登録したユーザID</th>
      <th>編集</th>
      <th>削除</th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>

    <tr>
      <td><%= room.id %></td>
      <td><%= link_to image_tag(room.room_image.to_s),room %></td>
      <td><%= link_to room.room_name, room %></td>
      <td><%= room.room_address %></td>
      <td><%= room.room_price %></td>
      <td><%= room.created_at.to_s(:datetime_jp) %></td>
      <td><%= room.user_id %></td>
 <td>
            <%= link_to "編集", [:edit, room] %>
        </td>
        <td>
            <%= link_to "削除", room, method: :delete, data: { confirm: "本当に削除しますか？" } %>
        </td>
    </tr>
    <% end %>
  </tbody>
</table>

