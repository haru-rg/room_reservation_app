<h3>登録済みルームを編集するよ！</h3>
<%= form_for @room do |f| %>
    <table>
        <tr>
            <th>
                <%= f.label :room_name ,"ルーム名" %>
            </th>
            <td>
                <%= f.text_field :room_name %>
            </td>
        </tr>

        <tr>
            <th>
                <%= f.label :room_introduction ,"ルーム紹介" %>
            </th>
            <td>
                <%= f.text_field :room_introduction %>
            </td>
        </tr>

        <tr>
            <th>
                <%= f.label :room_price ,"料金" %>
            </th>
            <td>
                <%= f.number_field :room_price %>
            </td>
        </tr>

        <tr>
            <th>
                <%= f.label :room_address ,"住所" %>
            </th>
            <td>
                <%= f.text_area :room_address %>
            </td>
        </tr>
        <tr>
            <th>
                <%= f.label :room_image ,"ルーム画像" %>
            </th>
            <td>
                <%= f.file_field :room_image %>
            </td>
        </tr>
    </table>

    <div>
        <ul>
            <li>
                <%= f.submit "登録完了する"%>
            </li>
            <li>
                <%= link_to "登録済みメール一覧に戻る", :rooms %>
            </li>
        </ul>
    </div>
    <% end %>